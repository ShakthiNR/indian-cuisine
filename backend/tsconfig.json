{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "rootDir": "src",                                 
    "outDir": "build",                                   
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                     
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src", "./src/*"]
    },
    "resolveJsonModule": true,                               
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
